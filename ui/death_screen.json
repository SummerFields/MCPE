{
  "namespace": "death",

  // Base button //

  "button_label": {
    "type": "label",
    "anchor_from": "center",
    "anchor_to": "center",
    "text": "$button_text",
    "shadow": true,
    "$color|default": [ 0.87, 0.87, 0.87 ],
    "color": "$color"
  },

  "default_button_state@common.sprite_sheet_base": {
    "uv": [ 8, 32 ],
    "uv_size": [ 8, 8 ],
    "nineslice_size": 2,

    "controls": [
      {
        "button_label@button_label": { "layer": 1 }
      }
    ]
  },
  "pressed_button_state@death.default_button_state": {
    "uv": [ 0, 32 ],
    "uv_size": [ 8, 8 ],
    "$color": [ 1.0, 1.0, 0.62 ]
  },
  "base_button@common.button": {
    "size": [ "25%", 26 ],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      { "default@death.default_button_state": { } },
      {
        "hover@death.default_button_state": {
          "controls": [
            {
              "hover_border": {
                "type": "image",
                "texture": "textures/gui/newgui/WhiteBorder",
                "uv": [ 0, 0 ],
                "uv_size": [ 3, 3 ],
                "size": [ "100%+2px", "100%+2px" ],
                "nineslice_size": 1,
                "bindings": [
                  {
                    "binding_name": "#gamepad_helper_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            { "button_label@button_label": { } }
          ]
        }
      },
      { "pressed@death.pressed_button_state": { } }
    ]
  },

  "gamepad_icon_button@common.grey_gamepad_icon_button": {
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "offset": [ 0, 0 ]
  },
  "gamepad_helper_description_text@common.gamepad_helper_icon_description": {
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "size": [ "default", "default" ],
    "offset": [ 0, 0 ]
  },
  "a_button": {
    "type": "panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "100%c", 13 ],
    "offset": [ 0, "-17.75%" ],
    "$icon_text": "A",
    "$icon_text_color": [ 1.0, 1.0, 1.0 ],
    "$icon_description_bind": "controller.buttonTip.select",
    "bindings": [
      {
        "binding_name": "#gamepad_helper_visible",
        "binding_name_override": "#visible"
      }
    ],
    "$gamepad_description|default": "common.gamepad_helper_icon_description",
    "controls": [
      {
        "icon@death.gamepad_icon_button": {
          "$gamepad_label|default": "common.gamepad_helper_icon_text",
          "controls": [
            {
              "text@$gamepad_label": { }
            }

          ]
        }
      },
      {
        "desc@death.gamepad_helper_description_text": {
          "offset": [ 2, 0 ]
        }
      }
    ]
  },

  // Screen //

  "death_screen@common.base_screen": {
    "controls": [
      {
        "background_gradient": {
          "type": "custom",
          "renderer": "gradient_renderer",
          "color1": [ 0.313, 0, 0, 0.37 ],
          "color2": [ 0.5, 0.188, 0.188, 0.627 ],
          "variables": [
            {
              "requires": "$is_holographic",
              "visible": false
            }
          ]
        }
      },
      {
        "you_died_label": {
          "type": "label",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [ 0, 60 ], //Modified
          "text": "deathScreen.message",
          "shadow": true,
          "font_size": "large"
        }
      },
      // Just an concept, uncomment this block when is fully impremented!
      /*
      {
        "death_message_label": {
          "type": "label",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [ 0, 85 ], //Modified
          "text": "death.attack.generic",
          "shadow": true
        }
      },
      */
      // Just an concept, change the text value if is fully impremented!
      /*
      {
        "score_label_panel": {
          "type": "stack_panel",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "size": [ "100%c", 9 ],
          "offset": [ 0, 100 ],
          "orientation": "horizontal",
          "controls": [
            {
              "score_label": {
                "type": "label",
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "text": "deathScreen.score",
                "shadow": true
              }
            },
            {
              "separator1": {
                "type": "panel",
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "size": [ 5, 10 ]
              }
            },
            {
              "score_value_label": {
                "type": "label",
                "color": [ 1, 1, 0.33 ],
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "text": "&e0",
                "shadow": true
              }
            }
          ]
        }
      },
      */
      {
        "classic_respawn_button@common_custom_buttons.classic_legacy_button": { //Modified
          "$button_text": "deathScreen.respawn",
          "anchor_from": "center",
          "anchor_to": "center", //Modified
          "offset": [ 0, 13 ], //Modified
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.respawn_button",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.respawn_button",
              "mapping_type": "pressed"
            }
          ]
        }
      },
      {
        "classic_main_menu_button@common_custom_buttons.classic_legacy_button": { //Modified
          "$button_text": "deathScreen.quit",
          "anchor_from": "center",
          "anchor_to": "center", //Modified
          "offset": [ 0, 37 ], //Modified
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.main_menu_button",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.main_menu_button",
              "mapping_type": "pressed"
            }
          ]
        }
      },
      {
        "select_button@death.a_button": { }
        
        }
    ]
  }
}