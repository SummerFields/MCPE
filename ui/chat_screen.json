//File modified originally by Hawt Dawg Man (@DeathBuilders). Give credits to him!!! ;)
{
  "namespace": "chat",

  // Button Images //

  "down_arrow_image@common.sprite_sheet_base": {
    "size": [ 12, 8 ],
    "uv_size": [ 12, 8 ],
    "uv": [ 36, 9 ]
  },
  "keyboard_image@common.sprite_sheet_base": {
    "size": [ 13, 11 ],
    "uv_size": [ 13, 11 ],
    "uv": [ 36, 0 ]
  },
  "send_image@common.sprite_sheet_base": {
    "size": [ 12, 12 ],
    "uv_size": [ 12, 12 ],
    "uv": [ 48, 4 ]
  },
  "send_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%c", 20 ],
    "controls": [
      {
        "send_image_panel": {
          "type": "panel",
          "size": [ 20, 20 ],
          "controls": [
            { "send_image@send_image": { } }
          ]
        }
      },
      {
        "gamepad_x_button": {
          "type": "panel",
          "size": [ 20, 20 ],
          "controls": [
            {
              "icon@common.grey_gamepad_icon_button": {
                "controls": [
                  {
                    "label": {
                      "type": "label",
                      "layer": 1,
                      "shadow": true,
                      "text": "X"
                    }
                  }
                ]
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#gamepad_helper_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },


  "keyboard_image_panel": {
    "type": "panel",
    "controls": [
      {
        "keyboard_image@chat.keyboard_image": {
          "bindings": [
            {
              "binding_name": "#keyboard_not_being_used",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "down_arrow_image@chat.down_arrow_image": {
          "bindings": [
            {
              "binding_name": "#keyboard_being_used",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "button_label": {
    "type": "label",
    "text": "$button_text",
    "shadow": false,
    "$color|default": [ 0.3, 0.3, 0.3 ],
    "color": "$color"
  },

  // Buttons //

  "button_default": { //Modified
    "type": "image",
    "texture": "textures/gui/newgui/black",
    "alpha": 0.5,
    "uv": [ 0, 0 ],
    "uv_size": [ 4, 4 ],
    "nineslice_size": 1
  },

  "modern_button": { //Modified
    "type": "image",
    "texture": "textures/gui/newgui/ButtonWithBorder",
    "alpha": 1.0,
    "uv": [ 0, 0 ],
    "uv_size": [ 16, 16 ],
    "nineslice_size": 6
  },

  "button_pressed@chat.button_default": { //Modified
    "alpha": 0.25
  },

  "modern_button_hover@chat.modern_button": { //Modified
    "texture": "textures/gui/newgui/ButtonWithBorderHover"
  },

  "modern_button_pressed@chat.modern_button": { //Modified
    "texture": "textures/gui/newgui/ButtonWithBorderPressed"
  },

  "base_button@common.button": {
    "focus_enabled": false,
    "$pressed_button_name": "button.menu_ok",
    "controls": [
      {
        "default@$default_button_control": {
          "$button_default_size|default": [ "default", "default" ],
          "size": "$button_default_size",
          "controls": [
            { "button_panel@$button_panel": { "layer": 1 } }
          ]
        }
      },
      {
        "hover@$hover_button_control": {
          "$button_hover_size|default": [ "default", "default" ],
          "size": "$button_hover_size",
          "controls": [
            { "button_panel@$button_panel": { "layer": 1 } }
          ]
        }
      },
      {
        "pressed@$pressed_button_control": {
          "$button_pressed_size|default": [ "default", "default" ],
          "size": "$button_pressed_size",
          "controls": [
            { "button_panel@$button_panel": { "layer": 1 } }
          ]
        }
      }
    ]
  },

  "small_button@chat.base_button": {
    "size": [ 20, 12 ], //Modified
    "$pressed_button_name": "button.send_message",
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "$default_button_control": "chat.button_default",
    "$hover_button_control": "chat.button_default",
    "$pressed_button_control": "chat.button_pressed",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "focused"
      }
    ]
  },

  "keyboard_button@chat.small_button": {
    "$button_panel": "chat.keyboard_image_panel",
    "$pressed_button_name": "button.keyboard_toggle"
  },

  "send_button@chat.small_button": {
    "size": [ "100%c", 12 ],
    "$button_default_size": [ "100%c", 12 ], //Modified
    "$button_hover_size": [ "100%c", 12 ], //Modified
    "$button_pressed_size": [ "100%c", 12 ], //Modified
    "$button_panel": "chat.send_panel",
    "bindings": [
      {
        "binding_name": "#send_button_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "modern_button_default_with_text@chat.modern_button": {
    "size": [ "100%c+5px", "100%c+5px" ],
    "min_size": [ 33, 18 ],
    "$color": [ 0.3, 0.3, 0.3 ],
    "controls": [
      { "button_label@chat.button_label": { "layer": 1 } }
    ]
  },

  "modern_button_hover_with_text@chat.modern_button_hover": {
    "size": [ "100%c+5px", "100%c+5px" ],
    "min_size": [ 33, 18 ],
    "$color": [ 1, 1, 1 ],
    "controls": [
      { "button_label@chat.button_label": { "layer": 1 } }
    ]
  },

  "modern_button_pressed_with_text@chat.modern_button_pressed": {
    "size": [ "100%c+5px", "100%c+5px" ],
    "min_size": [ 33, 18 ],
    "$color": [ 1, 1, 1 ],
    "controls": [
      { "button_label@chat.button_label": { "layer": 1 } }
    ]
  },

  "modern_button_with_text@chat.base_button": {
    "size": [ "100%c", "100%c" ],
    "min_size": [ 33, 18 ],
    "controls": [
      { "default@chat.modern_button_default_with_text": { } },
      { "hover@chat.modern_button_hover_with_text": { } },
      { "pressed@chat.modern_button_pressed_with_text": { } }
    ],
    "bindings": [
      {
        "binding_name": "#buttons_visible",
        "binding_name_override": "#visible"
      }
    ]
  },
  "modern_back_button@chat.modern_button_with_text": {
    "$button_text": "gui.back",
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "$pressed_button_name": "button.menu_exit"
  },
  "modern_hide_button@chat.modern_button_with_text": {
    "$button_text": "chatScreen.hide",
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "$pressed_button_name": "button.hide_chat"
  },

  // Messages Panel //

  "messages_text": {
    "type": "panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      {
        "text": {
          "type": "label",
          "localize": false,
          "size": [ "100%", "default" ],
          "shadow": true,
          "text": "#text"
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#chat_visible",
        "binding_name_override": "#visible"
      }
    ]
  },
  "messages_stack_panel": {
    "type": "stack_panel",
    "orientation": "vertical",
    "$scrolling_content_anchor_from": "bottom_left",
    "$scrolling_content_anchor_to": "bottom_left",
    "factory": {
      "name": "messages_factory",
      "control_name": "messages_text",
      "max_size": 100
    }
  },
  "messages_scrolling_panel@common.scrolling_panel": {
    "type": "panel",
    "size": [ "100%-2px", "100%-20px" ],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "offset": [ 2, -20 ],
    "$scrolling_content": "chat.messages_stack_panel",
    "$scroll_size": [ 5, "100%-4px" ],
    "$jump_to_bottom_on_update": true,
    "$show_background": false
  },

  // Chat Text Edit //

  "text_edit_box@common.text_edit_box": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "fill", 12 ],
    "max_length": 160,
    "$text_box_name": "#message_text_box",
    "selected": true,
    "can_be_deselected": false,
    "$text_edit_box_content_binding_name": "#text_box_text",
    "$text_edit_box_label_size": [ "default", "default" ],
    "focus_enabled": true,
    "place_holder_control": "",
    "$handle_select_button_deselect": false,
    "variables": [
      {
        "requires": "$mouse",
        "$handle_select_button_deselect": true
      }
    ],
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.reopen_keyboard",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "handle_select": false,
        "handle_deselect": "$handle_select_button_deselect",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_autocomplete",
        "to_button_id": "button.menu_autocomplete",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_autocomplete_back",
        "to_button_id": "button.menu_autocomplete_back",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_textedit_up",
        "to_button_id": "button.menu_textedit_up",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_textedit_down",
        "to_button_id": "button.menu_textedit_down",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.controller_select",
        "to_button_id": "button.send_message",
        "mapping_type": "global"
      }
    ],
    "controls": [
      {
        "clipper_panel": {
          "type": "panel",
          "size": [ "100% - 6px", "100% - 4px" ],
          "anchor_from": "center",
          "anchor_to": "center",
          "clips_children": true,
          "controls": [
            {
              "display_text@common.text_edit_box_label": {
                "layer": 1,
                "size": "$text_edit_box_label_size",
                "min_size": [ "100%", 0 ],
                "anchor_from": "left_middle",
                "anchor_to": "left_middle",
                "$text_alpha|default": "$alpha"
              }
            }
          ]
        }
      },
      {
        "locked": {
          "type": "panel",
          "$disabled_color|default": "$color",
          "controls": [
            {
              "edit_box_indent@common.edit_box_indent": {
                "$color": "$disabled_color",
                "$alpha": "$disabled_alpha"
              }
            }
          ]
        }
      },
      {
        "default@common.edit_box_indent": { //Modified
          "texture": "textures/gui/newgui/black",
          "alpha": 0.5,
          "uv": [ 0, 0 ],
          "uv_size": [ 4, 4 ]
        }
      },
      {
        "hover@common.edit_box_indent": { //Modified
          "texture": "textures/gui/newgui/black",
          "alpha": 0.5,
          "uv": [ 0, 0 ],
          "uv_size": [ 4, 4 ]
        }
      },
      {
        "pressed@common.edit_box_indent": { //Modified
          "texture": "textures/gui/newgui/black",
          "alpha": 0.5,
          "uv": [ 0, 0 ],
          "uv_size": [ 4, 4 ]
        }
      }
    ]
  },

  // Commands Background //

  "commands_background": {
    "type": "image",
    "size": [ "100%", "100%c" ],
    "texture": "textures/gui/newgui/White",
    "color": [ 0.0, 0.0, 0.0 ],
    "uv_size": [ 1, 1 ],
    "nineslice_size": 1
  },

  // Auto Complete //

  "auto_complete_panel_contents_with_item": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    // We have to manually put in the size because item renderer is weird.
    "size": [ "100%", 10 ],
    "layer": 5,

    "controls": [
      {
        "auto_complete_item_renderer@common.item_renderer": {
          "size": [ 10, 10 ],
          "offset": [ -2, -4 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "bindings": [
            {
              "binding_name": "#auto_complete_item",
              "binding_type": "collection",
              "binding_name_override": "#item_id_aux",
              "binding_collection_name": "auto_complete"
            }
          ]
        }
      },
      {
        "text": {
          "type": "label",
          "offset": [ 2, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "shadow": true, //Added/Modified
          "text": "#text",
          "bindings": [
            {
              "binding_type": "collection",
              "binding_name": "#auto_complete_text",
              "binding_name_override": "#text",
              "binding_collection_name": "auto_complete"
            }
          ]
        }
      }
    ]
  },
  "auto_complete_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "controls": [
      {
        "panel": {
          "type": "panel",
          "size": [ "100%", "100%" ],
          "max_size": [ "100%", "100%" ],
          "min_size": [ 0, 0 ],

          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "controls": [
            {
              "auto_complete_grid": {
                "type": "grid",
                "grid_item_template": "chat.auto_complete_panel_contents_with_item",
                "grid_fill_direction": "vertical",
                "collection_name": "auto_complete",
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "size": [ "100%", "100%" ],
                "bindings": [
                  {
                    "binding_name": "#get_grid_size",
                    "binding_type": "collection",
                    "binding_collection_name": "auto_complete"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  // Commands Stack Panel //

  "commands_panel": {
    "type": "panel",
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "offset": [ 0, -20 ],
    "size": [ "100%", "100%-20px" ],
    "controls": [
      {
        "auto_complete_panel@chat.auto_complete_panel": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "layer": 1
        }
      }
    ]
  },

  // Chat Bottom Panel //

  "chat_bottom_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "offset": [ 0, -2 ],
    "size": [ "100% -4px", "12px" ],
    "min_size": [ "100% -4px", "12px" ],
    "controls": [
      { "text_box@chat.text_edit_box": { } },
      {
        "separador1": {
          "type": "panel",
          "size": [ 2, 20 ],
          "bindings": [
            {
              "binding_name": "#send_button_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "send_button@chat.send_button": {
          "offset": [ -20, 0 ],
          "layer": 2
        }
      },
      {
        "separador2": {
          "type": "panel",
          "size": [ 2, 20 ]
        }
      },
      { "keyboard_button@chat.keyboard_button": { "layer": 2 } }
    ]
  },

  "chat_screen@common.base_screen": {
    "close_on_player_hurt": true,
    "controls": [
      {
        "background": {
          "type": "image",
          "size": [ "100%", "100%" ],
          "texture": "textures/gui/newgui/White",
          "color": [ 0.0, 0.0, 0.0 ],
          "alpha": 0.5,
          "uv_size": [ 1, 1 ],
          "nineslice_size": 1
        }
      },
      { "messages_panel@chat.messages_scrolling_panel": { } },
      { "chat_bottom_panel@chat.chat_bottom_panel": { } },
      { "commands_panel@chat.commands_panel": { "layer": 11 } },
      {
        "back_button@chat.modern_back_button": {
          "offset": [ -12, 4 ],
          "layer": 12
        }
      },
      {
        "hide_button@chat.modern_hide_button": {
          "offset": [ -12, 28 ],
          "layer": 12
        }
      }
    ],
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_cancel",
        "mapping_type": "global"
      }
    ]
  }
}