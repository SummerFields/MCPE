{
  "namespace": "common_toggles",

  /////////////////////////////////
  //
  //  TOGGLE BUTTON NO COLLECTION
  //
  /////////////////////////////////

  "light_text_toggle@light_ui_toggle": {
    "$button_type_panel": "common_buttons.new_ui_binding_button_label",
    "$button_offset|default": [ 0, 0 ],
    "$button_text|default": "",
    "$pressed_alpha|default": 1,

    // For text bindings
    "$button_text_binding_type|default": "none",
    "$button_text_grid_collection_name|default": "",
    "$button_binding_condition|default": "none"
  },

  "light_image_toggle@light_ui_toggle": {
    "$button_type_panel": "common_buttons.button_content_panel",
    "$button_content|default": "common_toggles.toggle_image",
    "$button_offset|default": [ 0, 0 ]
  },

  "dark_text_toggle@dark_ui_toggle": {
    "$button_type_panel": "common_buttons.new_ui_binding_button_label",
    "$button_offset|default": [ 0, 0 ],
    "$button_text|default": "",
    "$pressed_alpha|default": 1,

    // For text bindings
    "$button_text_binding_type|default": "none",
    "$button_text_grid_collection_name|default": "",
    "$button_binding_condition|default": "none"
  },

  "dark_image_toggle@dark_ui_toggle": {
    "$button_type_panel": "common_buttons.button_content_panel",
    "$button_content|default": "common_toggles.toggle_image",
    "$button_offset|default": [ 0, 0 ]
  },


  "dark_ui_toggle@light_ui_toggle": {
    "$default_texture": "textures/gui/newgui/buttons/main/darkButton", //Modified
    "$hover_texture": "textures/gui/newgui/buttons/main/darkButtonpressednohover", //Modified
    "$pressed_texture": "textures/gui/newgui/buttons/main/darkButtonhover", //Modified
    "$pressed_no_hover_texture": "textures/gui/newgui/buttons/main/darkButtonpressed", //Modified

    "$default_color": [ 1, 1, 1 ],
    "$hover_color": [ 1, 1, 1 ]
  },

  "light_ui_toggle": {
    "type": "panel",

    "$unchecked_control": "common_toggles.toggle_unchecked",
    "$checked_control": "common_toggles.toggle_checked",
    "$unchecked_hover_control": "common_toggles.toggle_unchecked_hover",
    "$checked_hover_control": "common_toggles.toggle_checked_hover",
    "$unchecked_locked_control": "common_toggles.toggle_unchecked",
    "$unchecked_locked_hover_control": "common_toggles.toggle_unchecked",
    "$checked_locked_control": "common_toggles.toggle_checked",
    "$checked_locked_hover_control": "common_toggles.toggle_checked",

    "$default_texture": "textures/gui/newgui/buttons/main/lightButton", //Modified
    "$hover_texture": "textures/gui/newgui/buttons/main/lightButtonpressednohover", //Modified
    "$pressed_texture": "textures/gui/newgui/buttons/main/lightButtonhover", //Modified
    "$pressed_no_hover_texture": "textures/gui/newgui/buttons/main/lightButtonpressed", //Modified

    "$default_color": [ 0.3, 0.3, 0.3 ],
    "$hover_color": [ 1, 1, 1 ],
    "$checked_image|default": "common.empty_panel",
    "$unchecked_image|default": "common.empty_panel",
    "$default_border_color": [ 0.075, 0.075, 0.075 ],
    "$hover_border_color": [ 1, 1, 1 ],

    "$toggle_binding_type|default": "none",
    "$toggle_enabled_binding_type|default": "none",
    "$toggle_view_binding_name|default": "this_toggle",
    "controls": [
      {
        // done as a child to allow for parent bindings
        "$toggle_view_binding_name@common.toggle": {
          "bindings": [
            {
              "binding_type": "$toggle_binding_type",
              "binding_condition": "$toggle_binding_condition",
              "binding_collection_name": "$toggle_grid_collection_name",
              "binding_name": "$toggle_state_binding_name",
              "binding_name_override": "#toggle_state"
            },
            {
              "binding_type": "$toggle_enabled_binding_type",
              "binding_condition": "$toggle_enabled_binding_condition",
              "binding_collection_name": "$toggle_grid_collection_name",
              "binding_name": "$toggle_enabled_binding_name",
              "binding_name_override": "#enabled"
            }
          ]
        }
      }
    ]
  },


  /////////////////////////////////
  //
  //  TOGGLE BUTTON FOR COLLECTION
  //
  /////////////////////////////////

  "light_text_toggle_collection@light_ui_toggle_collection": {
    "$button_type_panel": "common_buttons.new_ui_binding_button_label",
    "$button_offset|default": [ 0, 0 ],
    "$button_text|default": "",
    "$pressed_alpha|default": 1,

    // For text bindings
    "$button_text_binding_type|default": "none",
    "$button_text_grid_collection_name|default": "",
    "$button_binding_condition|default": "none"
  },

  "light_image_toggle_collection@light_ui_toggle_collection": {
    "$button_type_panel": "common_buttons.button_content_panel",
    "$button_content|default": "common_toggles.toggle_image",
    "$button_offset|default": [ 0, 0 ]
  },

  "dark_text_toggle_collection@dark_ui_toggle_collection": {
    "$button_type_panel": "common_buttons.new_ui_binding_button_label",
    "$button_offset|default": [ 0, 0 ],
    "$button_text|default": "",
    "$pressed_alpha|default": 1,

    // For text bindings
    "$button_text_binding_type|default": "none",
    "$button_text_grid_collection_name|default": "",
    "$button_binding_condition|default": "none"
  },

  "dark_image_toggle_collection@dark_ui_toggle_collection": {
    "$button_type_panel": "common_buttons.button_content_panel",
    "$button_content|default": "common_toggles.toggle_image",
    "$button_offset|default": [ 0, 0 ]
  },


  "dark_ui_toggle_collection@light_ui_toggle_collection": {
    "$default_texture": "textures/gui/newgui/buttons/main/darkButton", //Modified
    "$hover_texture": "textures/gui/newgui/buttons/main/darkButtonpressednohover", //Modified
    "$pressed_texture": "textures/gui/newgui/buttons/main/darkButtonhover", //Modified
    "$pressed_no_hover_texture": "textures/gui/newgui/buttons/main/darkButtonpressed", //Modified

    "$default_color": [ 1, 1, 1 ],
    "$hover_color": [ 1, 1, 1 ]
  },

  "light_ui_toggle_collection": {
    "type": "panel",

    "$unchecked_control": "common_toggles.toggle_unchecked",
    "$checked_control": "common_toggles.toggle_checked",
    "$unchecked_hover_control": "common_toggles.toggle_unchecked_hover",
    "$checked_hover_control": "common_toggles.toggle_checked_hover",
    "$unchecked_locked_control": "common_toggles.toggle_locked",
    "$unchecked_locked_hover_control": "common_toggles.toggle_locked",
    "$checked_locked_control": "common_toggles.toggle_locked",
    "$checked_locked_hover_control": "common_toggles.toggle_locked",

    "$default_texture": "textures/gui/newgui/buttons/main/light", //Modified
    "$hover_texture": "textures/gui/newgui/buttons/main/lightpressednohover", //Modified
    "$pressed_texture": "textures/gui/newgui/buttons/main/lighthover", //Modified
    "$pressed_no_hover_texture": "textures/gui/newgui/buttons/main/lightpressed", //Modified
    "$locked_texture": "textures/gui/newgui/disabledButton", //Modified

    "$default_color": [ 0.3, 0.3, 0.3 ],
    "$hover_color": [ 1, 1, 1 ],
    "$checked_image|default": "common.empty_panel",
    "$unchecked_image|default": "common.empty_panel",
    "$default_border_color": [ 0.075, 0.075, 0.075 ],
    "$hover_border_color": [ 1, 1, 1 ],

    "$toggle_binding_type|default": "none",
    "$toggle_enabled_binding_type|default": "none",
    "$toggle_view_binding_name|default": "this_toggle",
    
    "$toggle_unchecked|default": false,
    "$toggle_unchecked_hover|default": false,
    "$toggle_checked|default": false,
    "$toggle_checked_hover|default": false,
    "$toggle_locked|default": false,

    "controls": [
      {
        // done as a child to allow for parent bindings
        "$toggle_view_binding_name@common.toggle": {
          "bindings": [
            {
              "binding_type": "$toggle_binding_type",
              "binding_condition": "$toggle_binding_condition",
              "binding_collection_name": "$toggle_grid_collection_name",
              "binding_name": "$toggle_state_binding_name",
              "binding_name_override": "#toggle_state"
            },
            {
              "binding_type": "$toggle_enabled_binding_type",
              "binding_condition": "$toggle_enabled_binding_condition",
              "binding_collection_name": "$toggle_grid_collection_name",
              "binding_name": "$toggle_enabled_binding_name",
              "binding_name_override": "#enabled"
            },
            {
              "binding_type": "collection_details",
              "binding_collection_name": "$toggle_grid_collection_name"
            }
          ]
        }
      }
    ]
  },

  "toggle_unchecked@common_buttons.new_ui_button_panel": {
    "$new_ui_button_texture": "$default_texture",
    "$content_alpha": 1,
    "$text_color": "$default_color",
    "$toggle_image": "$unchecked_image",
    "$border_layer": 1,
    "$border_color": "$default_border_color",
    "$toggle_unchecked": true,
    "layer": 1
  },

  "toggle_checked@common_buttons.new_ui_button_panel": {
    "$new_ui_button_texture": "$hover_texture",
    "$content_alpha": 1,
    "$text_color": "$default_color",
    "$toggle_image": "$checked_image",
    "$border_layer": 2,
    "$border_color": "$default_border_color",
    "$toggle_checked": true,
    "layer": 2
  },

  "toggle_unchecked_hover@common_buttons.new_ui_button_panel": {
    "$new_ui_button_texture": "$pressed_texture",
    "$content_alpha": 1,
    "$text_color": "$hover_color",
    "$toggle_image": "$unchecked_image",
    "$border_layer": 3,
    "$border_color": "$hover_border_color",
    "$toggle_unchecked_hover": true,
    "layer": 3
  },

  "toggle_checked_hover@common_buttons.new_ui_button_panel": {
    "$new_ui_button_texture": "$pressed_no_hover_texture",
    "$content_alpha": 1,
    "$text_color": "$hover_color",
    "$glyph_color": "$hover_color",
    "$toggle_image": "$checked_image",
    "$border_layer": 4,
    "$border_color": "$hover_border_color",
    "$toggle_checked_hover": true,
    "layer": 4
  },

  "toggle_locked@common_buttons.new_ui_button_panel": {
    "$new_ui_button_texture": "$locked_texture",
    "$content_alpha": 1,
    "$text_color": "$default_color",
    "$toggle_image": "$unchecked_image",
    "$button_image": "common_buttons.locked_button_image",
    "$border_layer": 1,
    "$border_color": "$default_border_color",
    "$toggle_locked": true,
    "layer": 1
  },

  "toggle_image": {
    "type": "panel",
    "controls": [
      { "image@$toggle_image": { } }
    ]
  },

  /////////////////////////////////
  //
  //  RADIO IMAGES
  //
  /////////////////////////////////

  "radio_off_icon": {
    "type": "image",
    "texture": "textures/gui/newgui/settings/radio_off",
    "size": [ 10, 10 ]
  },

  "radio_off_hover_icon": {
    "type": "image",
    "texture": "textures/gui/newgui/settings/radio_off_hover",
    "size": [ 10, 10 ]
  },

  "radio_on_icon": {
    "type": "image",
    "texture": "textures/gui/newgui/settings/radio_on",
    "size": [ 10, 10 ]
  },
      
  "radio_on_hover_icon": {
    "type": "image",
    "texture": "textures/gui/newgui/settings/radio_on_hover",
    "size": [ 10, 10 ]
  }
}