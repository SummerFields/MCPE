    ],
    "controls": [
      {
        "bar_indent@$scroll_track_image_control": {
          "visible": "$scroll_box_visible"
        }
      }
    ]
  },

  "scroll_box": {
    "type": "panel",
    "controls": [
      {
        "box": {
          "type": "scrollbar_box",
          "anchor_to": "top_left",
          "anchor_from": "top_left",
